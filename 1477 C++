
// BOJ 1477 휴게소 세우기 C++

#define _CRT_SECURE_NO_WARNINGS

#include <bits/stdc++.h>
#define REP(i,a,b) for(int i=a;i<b;++i)
#define FOR(i,N) REP(i,0,N)
#define all(x) x.begin(),x.end()
using namespace std;
typedef vector<int> vi;

int sum(vi& arr, int val) {
	int ret = 0,size=arr.size();
	REP(i, 1, size)
		ret += (arr[i] - arr[i - 1] - 1) / val;
	return ret;
}
int binary_search(int N, int M, int L, vi& arr) {
	int start = 0, rear = L, mid;
	while (start <= rear) {
		mid = (start + rear) >> 1;
		if (sum(arr, mid) > M) start = mid + 1;
		else rear = mid - 1;
	}
	return start;
}
int main(void) {
	ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
	int N, M, L;
	cin >> N >> M >> L;
	vi arr(N+2);
	FOR(i, N) cin >> arr[i];
	arr[N] = 0; arr[N + 1] = L;
	sort(all(arr));
	cout << binary_search(N+2, M, L, arr) << '\n';
	return 0;
}
